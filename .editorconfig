# Check http://editorconfig.org for more information
# This is the main config file for this project:
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{py, pyi}]
indent_style = space
indent_size = 4
max_line_length = 119

[*.xml]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[{Makefile,**.mk}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab

[*.md]
trim_trailing_whitespace = true
indent_size = 2
